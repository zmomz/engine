# --- Database ---
# Use postgresql+asyncpg for SQLAlchemy's async driver
DATABASE_URL=postgresql+asyncpg://tv_user:your_password@db:5432/tv_engine_db
POSTGRES_USER=tv_user
POSTGRES_PASSWORD=your_password
POSTGRES_DB=tv_engine_db

# --- Security ---
JWT_SECRET=a_very_strong_and_long_secret_key_for_jwt
ENCRYPTION_KEY=a_32_byte_long_secret_key_for_encrypting_api_keys

# --- Application Settings ---
LOG_LEVEL=INFO
# Set to "binance" or "bybit" to use a real exchange, or "mock" for testing
EXCHANGE_TYPE=mock

# --- Webhooks ---
WEBHOOK_SECRET_KEY=your-super-secret-key
